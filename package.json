  "author": {
    "name": "Василий Кузин",
    "email": "work@exer7um.com",
    "url": "https://github.com/ExEr7um"
  },
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.json --ignore-path .gitignore --max-warnings=0",
    "eslint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.json --ignore-path .gitignore --max-warnings=0 --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky && nuxt prepare",
    "prettier": "prettier --check --ignore-unknown --no-error-on-unmatched-pattern *",
    "prettier:write": "prettier --write --ignore-unknown --no-error-on-unmatched-pattern *",
    "preview": "nuxt preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "nuxt typecheck"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,json}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": "@exer7um/prettier-config",
  "dependencies": {
    "@formkit/auto-animate": "0.8.1",
    "@nuxt/fonts": "0.3.0",
    "@nuxt/image": "1.4.0",
    "@nuxtjs/i18n": "8.2.0",
    "@nuxtjs/tailwindcss": "6.11.4",
    "@vueuse/core": "10.9.0",
    "@vueuse/nuxt": "10.9.0",
    "nuxt": "3.10.3",
    "nuxt-headlessui": "1.1.5",
    "nuxt-icon": "0.6.9",
    "postcss-nesting": "12.1.0",
    "vue": "3.4.21",
    "vue-router": "4.3.0"
  },
  "devDependencies": {
    "@exer7um/eslint-config": "0.8.1",
    "@exer7um/prettier-config": "0.4.2",
    "@nuxt/test-utils": "3.11.0",
    "@vitest/coverage-istanbul": "1.4.0",
    "@vue/test-utils": "2.4.5",
    "happy-dom": "13.8.6",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "msw": "2.2.3",
    "typescript": "5.4.2",
    "vitest": "1.4.0",
    "vue-tsc": "2.0.6"
  }
}
