    "@types/node": "20.12.7",
    "@vitest/coverage-istanbul": "1.4.0",
    "@vue/test-utils": "2.4.5",
    "drizzle-kit": "0.20.14",
    "happy-dom": "14.7.1",
    "husky": "9.0.11",
